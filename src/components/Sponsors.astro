  { name: "the Church of Scientology", logo: "/assets/images/sponsor-logos/scientology.jpg" },
  { name: "Neopets", logo: "/assets/images/sponsor-logos/neopets.png" },
  { name: "Emblem of Eritrea", logo: "/assets/images/sponsor-logos/eritrea.png" },
  { name: "Verexxotle", logo: "/assets/images/sponsor-logos/verexxotle.webp" },
  { name: "Spencer's", logo: "/assets/images/sponsor-logos/spencers.png" },
  { name: "Shein", logo: "/assets/images/sponsor-logos/shein.png" },
