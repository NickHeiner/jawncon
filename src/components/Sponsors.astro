  { name: "MyPillow", logo: "/assets/images/sponsor-logos/mypillow.png" },
  { name: "Carnival Cruise Line", logo: "/assets/images/sponsor-logos/carnival-cruise.jpg" },
  { name: "Big Lots", logo: "/assets/images/sponsor-logos/big-lots.png" },
  { name: "Amway", logo: "/assets/images/sponsor-logos/amway.png" },
  { name: "Four Seasons", logo: "/assets/images/sponsor-logos/four-seasons.png" },
  { name: "Meta", logo: "/assets/images/sponsor-logos/meta.png" },
