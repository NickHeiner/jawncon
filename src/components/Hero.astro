---

<!-- Hero Section -->
<section class="hero-section relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background Image with Subtle Overlay -->
  <div class="absolute inset-0">
    <img
      src="/assets/images/hero.png"
      alt="Professional Conference Center"
      class="w-full h-full object-cover opacity-30"
    />
    <div class="absolute inset-0 bg-gradient-to-br from-primary/80 to-secondary/60"></div>
  </div>

  <!-- Geometric Overlay Elements -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-20 left-10 w-32 h-32 bg-accent/20 rounded-full blur-xl"></div>
    <div class="absolute bottom-40 right-20 w-48 h-24 bg-uncanny/10 rounded-lg rotate-12"></div>
    <div class="absolute top-1/3 right-1/4 w-16 h-16 bg-warning/30 rounded-lg rotate-45"></div>
  </div>

  <!-- Main Content -->
  <div class="relative z-10 text-center text-white px-4 max-w-6xl mx-auto">
    <div class="mb-8">
      <h1 class="jawn-hero mb-6 tracking-tight">JawnCon 2024</h1>
      <p class="text-xl md:text-2xl mb-4 font-light">
        The Premier Conference for Jawn Trading, Analysis &amp; Innovation
      </p>
      <p class="text-lg opacity-90 mb-8">
        February 14.000 - 24.999, 2024 | Philadelphia Convention Center
      </p>
    </div>

    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <a
        href="#register"
        class="hero-card bg-white text-primary hover:bg-white/90 font-semibold px-8 py-3 rounded-lg text-lg"
      >
        Register Now - Early Bird $1,247.33
      </a>
      <a
        href="#speakers"
        class="hero-card border border-white/40 text-white hover:bg-white/10 font-semibold px-8 py-3 rounded-lg text-lg"
      >
        View Speakers &amp; Agenda
      </a>
    </div>

    <!-- Attendee Count -->
    <div class="mt-12 text-center">
      <p class="text-sm opacity-80 mb-2">Join Our Growing Community</p>
      <p class="text-3xl font-bold">32,608</p>
      <p class="text-sm opacity-80">Registered Jawns</p>
    </div>
  </div>
</section> 